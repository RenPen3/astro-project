---
import PostLayout from "../layouts/PostLayout.astro";
import Header3 from "../components/Header3.astro";
import Footer2 from "../components/Footer2.astro";
import "bootstrap/dist/css/bootstrap.css";
import "../styles/global.scss";
const pageTitle = "Welcome to my blog page!"
---

<PostLayout>
  <Header3 />

  <section class="bg-slate-300 py-52">
    <div class="container">
      <div class="text-center border-spacing-2">
        <h1 class="display-2 text-center">{pageTitle}</h1>
        <p class="lead">
          Lorem ipsum dolor sit amet consectetur adipisicing elit.
        </p>
        <a href="/posts/post-1/">Post 1</a>
        <a href="/posts/post-2/">Post 2</a>

        <!-- <button class="bg-slate-100 w-25 p-2 font-semibold hover:bg-slate-200"
          >Start Now</button
        > -->
      </div>
    </div>
  </section>

  <section class="bg-white m-5">
    <div class="container-sm">
      <div class="flex justify-between items-center bg-gray-200 rounded-lg p-5">
        <img src="https://placehold.co/200x200" alt="image" />
      </div>
    </div>
  </section>

  <Footer2 />
</PostLayout>
