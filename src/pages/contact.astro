---
import Layout from "../layouts/Layout.astro";
import "bootstrap/dist/css/bootstrap.css";
import "../styles/global.scss";
const pageTitle = "Welcome to my contact page!";
---

<Layout>
  <section class="bg-slate-300 py-52">
    <div class="container">
      <div class="text-center border-spacing-2">
        <h1 class="display-2">{pageTitle}</h1>
        <p class="lead">
          Lorem ipsum dolor sit amet consectetur adipisicing elit.
        </p>
        <!-- <button class="bg-slate-100 w-25 p-2 font-semibold hover:bg-slate-200"
          >Start Now</button
        > -->
      </div>
    </div>
  </section>

  <section class="bg-white m-5">
    <div class="container-sm">
      <div class="p-5">
        <h3 class="mb-4 text-4xl">Contact</h3>
        <form class="lead">
          <input type="text" placeholder="Name" />
        </form>
      </div>
    </div>
  </section>
</Layout>
